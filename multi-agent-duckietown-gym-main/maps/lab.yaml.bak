# 5x5 counter-clockwise loop with a 4-way intersection in the middle
# Designed to test the 4-way intersection tile and traffic light
tiles:
  - [curve_left/W , straight/W, curve_left/N  , asphalt, asphalt]
  - [straight/S   , asphalt   , straight/N    , asphalt   , asphalt]
  - [curve_left/S  , straight/W, 4way          , straight/E, curve_left/N]
  - [asphalt  , asphalt  , straight/S    , asphalt   , straight/N]
  - [asphalt , asphalt , curve_left/S   , straight/E, curve_left/E]

objects:
  trafficlight:
    kind: trafficlight
    place:
      tile: [2,2]
      relative:
        ~SE2Transform:
          p: [-0.18,-0.18]
          theta_deg: 135

    #    rotate: 45
    height: 0.4
    optional: true

tile_size: 0.585
